<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ForgetMeNot"
             x:Class="ForgetMeNot.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary>

                    <Color x:Key="StandardTextColor">#FF000000</Color>

                    <Style x:Key="PreferencePromptStyle" TargetType="Label">
                        <Setter Property="FontSize" Value="10"/>
                        <Setter Property="HorizontalOptions" Value="Start"/>
                        <Setter Property="IsEnabled" Value="False"/>
                        <Setter Property="TextColor" Value="{StaticResource StandardTextColor}"/>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
